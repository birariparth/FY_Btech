import time
import sys
def type_lyric(line, char_delay=0.065):
    for char in line:
        print(char, end='', flush=True)
        time.sleep(char_delay)
    print()

def print_lyrics():
    lyrics = [
    "They say boys fall in love easily,",
    "but how easy is it when one look won’t fade?",
    "She’s in your coffee, in the rain’s aftertaste,",
    "in a song you never liked till now.",
    "You forget your words when her hand fits yours,",
    "and lilies suddenly feel too soft.",
    "You kiss her forehead instead of speaking,",
    "because love’s just madness whispered quiet."
    ]
    delays = [1.0, 0.8, 1.2, 0.8, 1.2, 0.8, 1.2, 0.8]
    print("\n")
    time.sleep(1.5)
    for i, line in enumerate(lyrics):
        type_lyric(line)
        time.sleep(delays[i])

print_lyrics()
time.sleep(0.02)